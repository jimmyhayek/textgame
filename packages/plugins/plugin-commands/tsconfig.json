// packages/plugin-commands/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "paths": {
    "@pabitel/core": ["../core/src"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", "dist", "test", "examples"]
}