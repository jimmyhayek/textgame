{
  "name": "@textgame/e2e-tests",
  "version": "0.1.0",
  "private": true,
  "description": "End-to-end tests for TextGame JS framework",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:vanilla": "cypress run --config baseUrl=http://localhost:3000",
    "test:react": "cypress run --config baseUrl=http://localhost:5173",
    "test:vue": "cypress run --config baseUrl=http://localhost:5173",
    "test:svelte": "cypress run --config baseUrl=http://localhost:5173",
    "test:all": "npm run test:vanilla && npm run test:react && npm run test:vue && npm run test:svelte",
    "test:future": "cypress run --env grepTags=@future"
  },
  "devDependencies": {
    "cypress": "^12.14.0",
    "cypress-grep": "^3.0.0",
    "cypress-localstorage-commands": "^2.2.2",
    "wait-on": "^8.0.3"
  }
}